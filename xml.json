            "    <ColumnDefinition Width=\"${3:1*}\" />",
            "</Grid.ColumnDefinitions>",
        ]
    },
    "Style for XAML": {
        "prefix": "style",
        "body": [
            "<Style TargetType=\"${1:Button}\">",
            "    $2",
            "</Style>",
        ]
    },
    "Style x:Key... for XAML": {
        "prefix": "style#",
        "body": [
            "<Style x:Key=\"${1:key1}\" TargetType=\"${2:Button}\">",
            "    $3",
            "</Style>",
        ]
    },
