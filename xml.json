    "Setter for XAML": {
        "prefix": "set",
        "body": "<Setter Property=\"${1:Background}\" Value=\"${2:Red}\" />$3"
    },
    "#Region for XAML": {
        "prefix": "#region",
        "body": [
            "<!--#region ${1:NewRegion} -->",
            "$2<!--#endregion-->",
        ]
    },
    "d:DataContext for XAML": {
        "prefix": "ddc",
        "body": "d:DataContext=\"{d:DesignInstance Type=${1:vm:MyViewModel}, IsDesignTimeCreatable=True}\"$2"
    },
    "Menu for XAML": {
